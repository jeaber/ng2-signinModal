@import 'jeet'
@import './../../../assets/css/theme'

.signin_window.ng-hide-add, .signin_window.ng-hide-remove-active  {
  /* this is required as of 1.3x to properly
     apply all styling in a show/hide animation */
  opacity 1
  transition(time:.5s)
}

.signin_window.ng-hide-add-active, .signin_window.ng-hide-remove {
  /* the transition is defined in the active class */
  opacity 0
  transition(time:.5s)
}
.overlay_shadow
  position fixed
  height 100%
  width 100%
  background: rgba(17,17,17,0.5);
  z-index 1
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
.signin_window
  z-index: 9

  .signin_box
    position: absolute
    border-radius 5px
    opacity 1
    z-index 99
    background color-secondary-white
    left 50%
    top 0
    margin-top 60px
    margin-left -150px
    width 300px
    +below(2)
      width 100%
      margin-left 0
      left 0
    .signin_content
      font-body
      width 75%
      margin 0 auto
      padding 10px 25px 20px
      h3
        margin 0
      input
        height 22px
        text-align left
        width 211px
      input, button
        clear both
        line-height normal
        font-weight 400
        margin 5px 0
        padding 7px 5px
      button
        width 100%
        outline none
        border color-primary-light medium solid
        background color-primary-white
        transition()
        .fa
          margin-left 4px
      button:hover
        border color-primary medium solid

    *
      text-align center
      color color-dark
